<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".location.LocationEntryFragment">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/zipcode_entry_icon_size"
        android:layout_height="@dimen/zipcode_entry_icon_size"
        android:src="@drawable/ic_location_24"
        app:layout_constraintBottom_toTopOf="@+id/labelZipcode"
        app:layout_constraintEnd_toEndOf="@+id/labelZipcode"
        app:layout_constraintStart_toStartOf="@+id/labelZipcode" />

    <TextView
        android:id="@+id/labelZipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your zipcode"
        android:textSize="@dimen/title_text_height"
        app:layout_constraintBottom_toTopOf="@+id/edZipcode"
        app:layout_constraintEnd_toEndOf="@+id/edZipcode"
        app:layout_constraintStart_toStartOf="@+id/edZipcode" />

    <EditText
        android:id="@+id/edZipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter zipcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT ZIPCODE"
        app:layout_constraintEnd_toEndOf="@+id/edZipcode"
        app:layout_constraintStart_toStartOf="@+id/edZipcode"
        app:layout_constraintTop_toBottomOf="@+id/edZipcode" />

</androidx.constraintlayout.widget.ConstraintLayout>